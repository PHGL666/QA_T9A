{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "robotframework-lsp",
            "name": "Robot Framework: Launch template",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "target": "${workspaceFolder}",
            "terminal": "integrated",
            "env": {
                "PROJECT_FOLDER": "${workspaceFolder}",
                "BROWSER": "${browser}"
            },
            "args": [
            "--nostatusrc",
            "--outputdir", "output",
            "--variable", "BROWSER:${input:browser}",
            "--include", "${input:tag}",
            ],
        }
    ],
    "inputs": [
        {
        "type": "pickString",
        "id": "browser",
        "description": "Votre navigateur : ",
        "options": ["chrome", "firefox"],
        "default": "firefox"
        },
        {
        "type": "pickString",
        "id": "tag",
        "description": "Votre s√©lection par tag : ",
        "options": ["tnr", "web", "language"],
        "default": "tnr"
        }
    ]
}